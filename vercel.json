{
  "version": 2,
  "builds": [
    { "src": "main.py", "use": "@vercel/python" },
    { "src": "frontend/*", "use": "@vercel/static" }
  ],
  "rewrites": [
    { "source": "/api/analyze", "destination": "main.py" },
    { "source": "/api/(.*)", "destination": "main.py" },
    { "source": "/download", "destination": "/frontend/download.html" },
    { "source": "/payment", "destination": "/frontend/payment.html" },
    { "source": "/dashboard", "destination": "/frontend/dashboard.html" },
    { "source": "/(.*)", "destination": "/frontend/$1" }
  ]
}
